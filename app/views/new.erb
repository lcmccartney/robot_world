<form action="/robots" method="post">
  <p>Add a new Robot to the directory:</p>
  <table>
    <tr>
      <td>Name:</td>
      <td><input type='text' name='robot[name]'></td>
    </tr>
    <tr>
      <td>City:</td>
      <td><input type='text' name='robot[city]'></td>
    </tr>
    <tr>
      <td>State:</td>
      <td><input type='text' name='robot[state]'></td>
    </tr>
    <tr>
      <td>Birthdate:</td>
      <td><input type='text' name='robot[birthdate]'></td>
    </tr>
    <tr>
      <td>Date Hired:</td>
      <td><input type='text' name='robot[date_hired]'></td>
    </tr>
    <tr>
      <td>Department:</td>
      <td><input type='text' name='robot[department]'></td>
    </tr>
    <tr>
      <td><input type='submit'></td>
    </tr>
  </table>
</form>
