<div class = "well">
  <form action="/robots/<%= @robot.id %>" method="post">
    <h1>Edit</h1>
    <input type="hidden" name="_method" value="PUT" />
    <p><input type='text' name='robot[name]' value="<%= @robot.name %>"/></p>
    <p><input type='text' name='robot[city]' value="<%= @robot.city %>"/></p>
    <p><input type='text' name='robot[state]' value="<%= @robot.state %>"/></p>
    <p><input type='text' name='robot[department]' value="<%= @robot.department %>"/></p>
    <input type='submit'/>
  </form>
</div>
