<div class="well">
  <center><h2>Directory</h2></center>

  <div class="row">
    <% @robots.each do |robot| %>
    <div class="col-sm-5 col-md-3">
      <div class="thumbnail">
        <img src="https://robohash.org/<%= robot.id %>">
        <div class="caption">
          <h3><center><a href="/robots/<%= robot.id %>"><%= robot.name %></a></center></h3>
          <p><%= robot.city %>, <%= robot.state %></p>
          <p><%= robot.department %></p>
          <a href="/robots/<%= robot.id %>/edit">
            <button type="button" class="btn btn-success">
              <span class="glyphicon glyphicon-pencil"></span> Edit
            </button>
          </a>

          <p>
            <form action="/robots/<%= robot.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <input type="submit" value="Delete">
            </form>
          </p>
        </p>

      </div>
    </div>
  </div>
  <% end %>
</div>
